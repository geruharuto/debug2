<% if current_user != user %>
  <% if user.followed_by?(current_user) %>
      <p><%= link_to 'フォローを外す',user_relationships_path(user.id), method: :delete, class: 'btn btn-danger btn-block' %></p>
  <% else %>
      <p><%= link_to 'フォローする', user_relationships_path(user.id), method: :post, class: 'btn btn-primary btn-block' %></p>
  <% end %>
<% end %>